<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Training Routines</title>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body class="loaded">
  <section>
    <div class="main-section">
      <nav>
        <div class="heading">
          <!-- Main heading for the page -->
          <h1>Training Routines</h1>
        </div>
        <div class="nav-wrapper">
          <ul>
            <!-- Button to create a new routine -->
            <li><a href="/routines/new" class="button">New Routine</a></li>
            <li><a href="../workouts" class="button">back</a></li>
          </ul>
        </div>
      </nav>
    </div>
  </section>
  <!-- Secondary heading, consider giving it a unique purpose -->
  <h1 class="title-size">Training Routines</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Workouts</th>
        <th>Sets</th>
        <th>Reps</th>
        <th>Actions</th> <!-- New column for edit and delete buttons -->
      </tr>
    </thead>
    <tbody>
      <!-- Loop through routines to populate table rows -->
      <% routines.forEach(routine => { %>
        <tr>
          <!-- Routine name -->
          <td><%= routine.name %></td>
          <td>
            <!-- Loop through workouts within the routine -->
            <% routine.workouts.forEach(workout => { %>
              <!-- Display workout name -->
              <span><%= workout.name %></span><br>
            <% }); %>
          </td>
          <!-- Display sets and reps for the routine -->
          <td><%= routine.sets %></td>
          <td><%= routine.reps %></td>
          <td>
            <!-- Edit button linking to routine's edit page -->
            <div class="button-container">
              <a href="/routines/<%= routine._id %>/edit" class="button btn-2">Edit</a>
              <!-- Form for deleting a routine -->
              <form action="/routines/<%= routine._id %>?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn-2" type="submit">Delete</button>
              </form>
            </div>
          </td>
         
          
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
