<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Routine</title>

  <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body class="loaded">
  <section>
    <div class="main-section">
      <nav>
        <div class="heading">
          <!-- Main heading for the page -->
          <h1>Workout Plans</h1>
        </div>
        <div class="nav-wrapper">
          <ul>
            <!-- Link to go back to routines -->
            <li><a href="/routines" class="button">back</a></li>
          </ul>
        </div>
      </nav>
    </div>
  </section>
  
  <!-- Secondary heading for the creation form -->
  <h1>Create New Routine</h1>
  <div class="text-container">

    <!-- Form to create a new routine -->
    <form action="/routines" method="POST">
      <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div>
        <label for="sets">Sets:</label>
        <input type="number" id="sets" name="sets" required>
      </div>
      <div>
        <label for="reps">Reps:</label>
        <input type="text" id="reps" name="reps" pattern="^\d+(\-\d+)?$" required>
      </div>
      <div>
        <label for="workouts">Select Workouts:</label>
        <!-- Loop through workouts to display checkboxes -->
        <% workouts.forEach(workout => { %>
          <input type="checkbox" name="workouts" value="<%= workout._id %>">
          <span><%= workout.name %></span><br>
          <% }); %>
        </div>
        <!-- Button to submit the form and create the routine -->
        <button type="submit">Create Routine</button>
      </form>
    </div>
    </body>
    </html>
    